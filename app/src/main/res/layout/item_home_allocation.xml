<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp">

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/square"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0"
        tools:text="@string/percent" />

    <TextView
        android:id="@+id/tv_allocationtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_percent"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        card_view:layout_constraintEnd_toEndOf="@id/tv_percent"
        card_view:layout_constraintStart_toStartOf="@+id/tv_percent"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_percent"
        tools:text="@string/allocation" />
</androidx.constraintlayout.widget.ConstraintLayout>

